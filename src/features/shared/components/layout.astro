    class="w-full p-6 sm:p-10 md:p-14 text-sm leading-6 sm:text-[15px] sm:leading-7 md:text-base md:leading-7 text-rurikon-500 antialiased"
  >
    <div class="flex flex-col mobile:flex-row">
      <NavBar />
      <main class="relative flex-1 max-w-2xl [contain:inline-size]">
